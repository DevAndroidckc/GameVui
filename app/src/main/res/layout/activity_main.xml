    <EditText
        android:id="@+id/editView_User"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="57dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/ic_action_username"
        android:ems="10"
        android:hint="Tên đăng nhập"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editView_Pass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editView_User"
        android:layout_marginStart="57dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPersonName|textPassword" />

    <Button
        android:id="@+id/button_Login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editView_Pass"
        android:layout_marginStart="57dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/my_button"
        android:onClick="Login"
        android:text="ĐĂNG NHẬP"
        />

    <TextView
        android:id="@+id/textView_Forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editView_Pass"
        android:layout_alignStart="@+id/editView_Pass"
        android:layout_marginStart="194dp"
        android:layout_marginTop="23dp"
        android:onClick="Forgot_Password"
        android:text="Quên mật khẩu ?"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_Not_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_Login"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="53dp"
        android:text="Bạn chưa có tài khoản ?"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_Register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button_Login"
        android:layout_marginStart="57dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/my_button"
        android:onClick="Register"
        android:text="ĐĂNG KÍ" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_Register"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="133dp"
        android:text="Đăng nhập bằng"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton_Google"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="130dp"
        app:srcCompat="@mipmap/ic_google" />

    <ImageButton
        android:id="@+id/imageButton_facebook"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_facebook" />

</RelativeLayout>
