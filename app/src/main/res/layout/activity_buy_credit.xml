<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyCredit"
    android:background="@drawable/anhnen1">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_coin1" />

    <TextView
        android:id="@+id/textView_tongCredit_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="2dp"
        android:text="10000"
        android:textColor="#942A07"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView15"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView_Muacredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="Mua Credit"
        android:textColor="#A52B04"
        android:textStyle="bold"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_500"
        android:layout_width="158dp"
        android:layout_height="106dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/my_button1"
        android:drawableLeft="@mipmap/ic_coin100"
        android:text="500"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Muacredit" />

    <Button
        android:id="@+id/button_1000"
        android:layout_width="158dp"
        android:layout_height="106dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/my_button2"
        android:drawableLeft="@mipmap/ic_coin500"
        android:text="1000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_500"
        app:layout_constraintTop_toTopOf="@+id/button_500" />

    <Button
        android:id="@+id/button_3000"
        android:layout_width="158dp"
        android:layout_height="106dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/my_button3"
        android:drawableLeft="@mipmap/ic_coin1000"
        android:text="3000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/button_500"
        app:layout_constraintTop_toBottomOf="@+id/button_500" />

    <Button
        android:id="@+id/button_5000"
        android:layout_width="158dp"
        android:layout_height="106dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/my_button4"
        android:drawableLeft="@mipmap/ic_coin2000"
        android:text="5000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button_1000"
        app:layout_constraintStart_toEndOf="@+id/button_3000"
        app:layout_constraintTop_toTopOf="@+id/button_3000" />

    <Button
        android:id="@+id/button_trove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Về menu"
        android:onClick="luuCredit"
        android:background="@drawable/my_button1"
        app:layout_constraintEnd_toEndOf="@+id/button_5000"
        app:layout_constraintStart_toStartOf="@+id/button_3000"
        app:layout_constraintTop_toBottomOf="@+id/button_3000" />

</androidx.constraintlayout.widget.ConstraintLayout>